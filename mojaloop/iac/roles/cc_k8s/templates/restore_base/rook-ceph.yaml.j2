apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: {{ fact_argo_merged_config.apps['utils'].sub_apps['rook_ceph'].app_name }}
  namespace: {{ fact_argo_merged_config.namespace }}

  finalizers:
    - resources-finalizer.argocd.argoproj.io

spec:
  project: default
  syncPolicy:
    automated:
      prune: true
      selfHeal: true
    retry:
      limit: 20
      backoff:
        duration: 10s
        maxDuration: 3m0s
        factor: 2
    syncOptions:
      - CreateNamespace=true
      - PrunePropagationPolicy=foreground
      - PruneLast=true
  destination:
    server: "https://kubernetes.default.svc"
    namespace: {{ fact_rook_ceph_namespace }}
  sources:
    - chart: rook-ceph
      repoURL: https://charts.rook.io/release
      targetRevision: {{ fact_argo_merged_config.apps['utils'].sub_apps['rook_ceph'].helm_version }}

      helm:
        releaseName: rook-ceph
        valuesObject:
          csi:
            kubeletDirPath: {{ fact_argo_merged_config.apps['utils'].sub_apps['rook_ceph'].rook_csi_kubelet_dir_path }}
            serviceMonitor:
              interval: 60s
          enableDiscoveryDaemon: true
          monitoring:
            enabled: true
          resources:
            limits:
              memory: 512Mi
            requests:
              cpu: 50m
              memory: 64Mi
    - repoURL: {{ fact_argo_merged_config.gitrepo_host_fqdn }}/{{ fact_argo_merged_config.gitrepo_owner }}/{{ fact_argo_merged_config.gitrepo_repo }}.git
      targetRevision: {{ fact_argo_merged_config.apps['utils'].application_gitrepo_tag }}
      path: gitops/applications/base/rook-ceph
      plugin:
        name: envsubst
        env:
          - name: rook_ceph_namespace
            value: {{ fact_rook_ceph_namespace }}

          - name: objects_replica_count
            value: {{ fact_argo_merged_config.apps['utils'].sub_apps['rook_ceph'].objects_replica_count }}

    - repoURL: {{ fact_argo_merged_config.gitrepo_host_fqdn }}/{{ fact_argo_merged_config.gitrepo_owner }}/{{ fact_argo_merged_config.gitrepo_repo }}.git
      targetRevision: {{ fact_argo_merged_config.apps['utils'].application_gitrepo_tag }}
      path: gitops/applications/overlays/cloud_provider/{{ cluster_cloud_provider }}/rook-ceph-cluster/{{ fact_argo_merged_config.apps['utils'].sub_apps['rook_ceph'].volumes_provider }}
      plugin:
        name: envsubst
        env:
          - name: rook_ceph_namespace
            value: {{ fact_rook_ceph_namespace }}

          - name: ceph_image_version
            value: {{ fact_argo_merged_config.apps['utils'].sub_apps['rook_ceph'].image_version }}

          - name: ceph_osd_count
            value: {{ fact_argo_merged_config.apps['utils'].sub_apps['rook_ceph'].osd_count }}

          - name: ceph_mon_volumes_storage_class
            value: {{ fact_argo_merged_config.apps['utils'].sub_apps['rook_ceph'].mon_volumes_storage_class }}
          
          - name: ceph_mon_volume_size
            value: {{ fact_argo_merged_config.apps['utils'].sub_apps['rook_ceph'].mon_volumes_size }}

          - name: ceph_osd_volumes_storage_class
            value: {{ fact_argo_merged_config.apps['utils'].sub_apps['rook_ceph'].osd_volumes_storage_class }}
          
          - name: ceph_volume_size_per_osd
            value: {{ fact_argo_merged_config.apps['utils'].sub_apps['rook_ceph'].volume_size_per_osd }}

          - name: csi_driver_replicas
            value: {{ fact_argo_merged_config.apps['utils'].sub_apps['rook_ceph'].csi_driver_replicas }}

          - name: kubelet_dir_path
            value: {{ fact_argo_merged_config.apps['utils'].sub_apps['rook_ceph'].rook_csi_kubelet_dir_path }}

          - name: cloud_region
            value: {{ fact_argo_merged_config.apps['utils'].sub_apps['rook_ceph'].volumes_storage_region }}

          - name: cluster_domain
            value: {{ fact_argo_merged_config.apps['utils'].sub_apps['rook_ceph'].cluster_domain }}